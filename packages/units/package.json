{
  "name": "@nawt/units",
  "version": "0.1.0",
  "description": "A utility library for CSS unit conversions.",
  "main": "src/index.ts",
  "keywords": [
    "react",
    "jsx",
    "styled-components",
    "css-in-js",
    "ui",
    "unit",
    "layout"
  ],
  "scripts": {
    "test": "jest --passWithNoTests --colors",
    "prettier": "prettier --ignore-path '../../.prettierignore' --check .",
    "prettier:fix": "prettier --ignore-path '../../.prettierignore' --write .",
    "lint:es": "eslint --ignore-pattern '/dist/' . --ext .ts,.tsx .",
    "lint:es-fix": "eslint --ignore-pattern '/dist/' --fix --ext .js,.ts,.tsx .",
    "build": "rimraf dist && bundler"
  },
  "author": "Julian Low <hello@heyjul.es>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "main": "dist/units.js",
    "module": "dist/units.esm.js",
    "typings": "dist/index.d.ts"
  },
  "devDependencies": {
    "@nawt/bundler": "workspace:0.1.0"
  }
}
